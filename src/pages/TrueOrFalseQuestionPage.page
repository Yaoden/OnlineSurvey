<apex:page standardController="Survey__c"
           extensions="contnewsurvey"
           sidebar="false"
           docType="html-5.0"
           standardStylesheets="false"
           >
    
    
    <html xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" lang="en">
        
        
        <head>
            <meta charset="utf-8" />
            <title>New Survey Creation</title>
            <meta name="viewport" content="width=device-width, initial-scale=1.0" />
            <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet" />
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" ></script>
            
            <apex:slds />
            <script src="/path/to/svg4everybody.js"></script>
            <script>svg4everybody(); // run it now or whenever you are ready</script>
            
            
            
            
        </head>
        
        <style>
            
            html{
            
            }
            
            body{
            font-family: 'Salesforce Sans',Arial,sans-serif;
            background-color: rgb(244, 246, 249);
            height: 100%;
            font-weight: 300;
            /*  display: flex;
            justify-content: center;
            align-items: center;*/
            
            }
            
            div.container{
            width: 50%;
            margin-left: 30px;
            }
            
            div.pbBody{
            font-size: 13px;
            font-weight: 300;
            padding-bottom: 10px;
            padding-top: 10px;
            /*  line-height: 20px;
            */
            }
            
            h2.mainTitle{
            font-size: 18px;
            font-weight: 300;
            padding-top: 30px;
            padding-bottom: 15px;
            }
            
            select.btn.btn-default{
            height: 35px;
            font-size: 12px;
            font-size: 12px;
            margin-left: 5px;
            margin-top: 5px;
            margin-right: 10px;
            font-weight: 400;
            }
            
            select.btn.btn-default:hover{
            background-color: #f7f9fb;
            }
            
            select.btn.btn-info{
            width: 80px;
            height: 35px;
            font-size: 12px;
            font-size: 12px;
            font-weight: 400;
            background-color: transparent;
            border: 1px solid rgb(216, 221, 230);
            background-color: rgb(255, 255, 255);
            }
            
            select.btn.btn-info:hover{
            background-color: #f7f9fb;
            }
            
            
            input.btn.btn-primary{
            height: 35px;
            /*    width: 90px; */
            font-size: 12px;
            background-color: rgb(0, 112, 210);
            border: 1px solid rgb(0, 112, 210);
            color: rgb(255, 255, 255);
            margin-top: 10px;
            font-weight: 400;
            }
            
            input.btn.btn-primary:hover{
            background-color: rgb(0, 95, 178);
            }
            
            
            input.btn.btn-success{
            height: 35px;
            /*    width: 90px; */
            font-size: 12px;
            background-color: rgb(0, 112, 210);
            border: 1px solid rgb(0, 112, 210);
            color: rgb(255, 255, 255);
            margin-right: 15px;
            margin-top: 25px;
            font-weight: 400;
            }
            
            input.btn.btn-success:hover{
            background-color: rgb(0, 95, 178);
            }
            
            input.btn.btn-danger{
            height: 35px;
            width: 90px;
            font-size: 12px;
            margin-top: 25px;
            background-color: rgb(0, 112, 210);
            border: 1px solid rgb(0, 112, 210);
            color: rgb(255, 255, 255);
            float: right;
            font-weight: 400;
            }
            
            
            input.btn.btn-danger:hover{
            background-color: rgb(0, 95, 178);
            }
            
            input.btn.btn-default{
            height: 35px;
            /*    width: 90px;*/
            font-size: 12px;
            margin-top: 25px;
            margin-bottom: 20px;
            margin-right: 5px;
            font-weight: 400;
            color: rgb(0, 95, 178);
            background-color: transparent;
            border: 1px solid rgb(216, 221, 230);
            background-color: rgb(255, 255, 255);
            }
            
            input.btn.btn-default:hover{
            background-color: #f7f9fb;
            }
            
            
            input.btn.btn-info{
            height: 35px;
            /*    width: 90px;*/
            font-size: 12px;
            font-weight: 400;
            margin-top: 10px;
            margin-bottom: 15px;
            color: rgb(0, 95, 178);
            background-color: transparent;
            border: 1px solid rgb(216, 221, 230);
            background-color: rgb(255, 255, 255);
            transition: color .1s linear;
            }
            
            input.btn.btn-info:hover{
            background-color: #f7f9fb;
            }
            
            
            p{
            font-size: 13px;
            display: block;
            font-weight: 300;
            line-height: 45px;
            /*margin-right: 5px;*/
            }
            
            
            p.slds-text-title--caps.slds-line-height--reset{
            font-size: 2.75rem;
            font-weight: 300;
            margin-bottom: 20px;
            }
            
            
            .slds-page-header{
            margin-bottom: 20px;
            }
            
            body.slds-scope{
            margin: 0;
            padding: 0;
            }
            
            input[type=checkbox], input[type=radio] {
            margin: 4px 8px 0;
            }
            
        </style>
        
        <body>
            <div class="slds-scope">
                
                <div class="slds-page-header" role="banner">
                    <div class="slds-grid">
                        <div class="slds-col slds-has-flexi-truncate">
                            
                            <div class="slds-media slds-no-space slds-grow">
                                <div class="slds-media__figure">
                                    <svg aria-hidden="true" class="slds-icon slds-icon-standard-user">
                                        <use xlink:href="{!URLFOR($Asset.SLDS, 'assets/icons/standard-sprite/svg/symbols.svg#timesheet')}"></use>
                                    </svg>
                                </div>
                                <div class="slds-media__body">
                                    <p class="slds-text-title--caps slds-line-height--reset">Survey</p>
                                    <h1 class="slds-page-header__title slds-m-right--small slds-align-middle slds-truncate" title="Create New Survey">True or False Question</h1>
                                </div>
                            </div>
                            <!-- / HEADING AREA -->
                            
                        </div>
                        <div class="slds-col slds-no-flex slds-grid slds-align-top">
                            <apex:form >
                                <div class="btn-group">
                                    <apex:commandButton value="Return" action="{!Cancel}" styleClass="btn btn-info"/>
                                </div>
                            </apex:form>
                        </div>
                    </div>
                    
                </div>
                
                <apex:form >
                    
                    <div class="container">

                                      
                        <apex:pageblock title="New True False Question">
                            <p>Question Text:<apex:inputText required="true" value="{!questiontext}" styleClass="form-control"/></p>
                            
                            <p>Correct Answer:<br></br>
		                        <apex:selectList size="1" value="{!truefalsequestionoutput}" styleClass="btn btn-info">
		                            <apex:selectOptions value="{!truefalsequestion}"></apex:selectOptions>
		                        </apex:selectList>
		                    </p>
		                    <apex:commandButton value="Create Question" styleClass="btn btn-default" action="{!insertnewquestion}"/>
		                    <apex:commandButton value="Back" styleClass="btn btn-danger" action="{!goBackToCreateQuestions}" immediate="true" html-formnovalidate="formnovalidate" />
		                </apex:pageblock>
                
        		
				    </div>
				    
				    
				</apex:form>

</div>

</body>
</html>

</apex:page>